<!DOCTYPE html>
<html lang="ja">

<%- include('layouts/head') %>

  <body>

    <%- include('layouts/header') %>

      <section class="conA">
        <div class="container">
          <p>貸し出し状況</p>
          <div>
            <form action="/research" method="POST">
              <input name="name">
              <button type="submit"> 検索</button>
            </form>
          </div>

          <% for(var i=0; i < deviceposts.length; i++){ %>
            <table class="table">
              <tbody>
                <tr>
                  <th style="width: 20%;">
                    <img src="<%= deviceposts[i].image %> " class="img-fluid rounded">
                  </th>
                  <td class="align-middle text-center" style="width: 45%;">
                    <a href="/status/<%= deviceposts[i]._id  %>  ">
                      <%= deviceposts[i].device_name %>
                    </a>
                  </td>
                  <% if(deviceposts[i].flag==true) {%>
                    <td class="align-middle text-center" style="width: 35%;">
                      <div type="button" class=" btn btn-success" style="font-size: 2vw;">貸し出し可</div>
                    </td>
                    <% } %>
                      <% if(deviceposts[i].flag==false){ %>
                        <td class="align-middle text-center" style="width: 35%;">
                          <p type="button" class=" btn btn-danger" style="font-size: 2vw;">貸し出し中</p>
                        </td>
                        <% } %>
                </tr>
              </tbody>
            </table>

            <% } %>
              <a href="/home">ホームへ</a>
        </div>
      </section>

      <%- include('layouts/footer') %>
  </body>

</html>