<!DOCTYPE html>
<html lang="ja">

<%- include('layouts/head') %>

  <body>

    <%- include('layouts/header') %>

      <section class="conA" id="app">
        <div class="card">
          <div class="card-body">
            <h3>
              <input type="hidden" value="<%= devicepost.device_name %>" id="deviceName">
              <%= devicepost.device_name %>
            </h3>
          </div>
          <img src="<%= devicepost.image %>" class="img-fluid">
          <div class="card-body">
            <p class="card-text">
              <span style="font-weight: bold;">使用者：</span>
              <%= devicepost.user %>
            </p>
            <p class="card-text">
              <span style="font-weight: bold;">使用場所：</span>
              <%= devicepost.location %>
            </p>
            <p class="card-text">
              <span style="font-weight: bold;">貸し出し日時：</span>
              <% if(devicepost.datePosted){ %>
                <%= devicepost.datePosted.getFullYear() %><span>年</span><%= devicepost.datePosted.getMonth()+1 %><span>月</span><%= devicepost.datePosted.getDate() %><span>日</span>
                      <%= devicepost.datePosted.getHours() %><span>時</span><%= devicepost.datePosted.getMinutes() %><span>分</span>
              <% } %>  
            </p>
          </div>
        </div>

        <img src="<%= devicepost.qrImgSrc %> " id="qrImgSrc">
        <button type="button" class="btn btn-primary" v-on:click="getQRcode">QRコードをダウンロードする</button>
        <form action="/deleteDevice" method="POST">
          <input type="hidden" value="<%= devicepost.uuid %>" name="uuid">
          <button type="submit" class="btn btn-danger">消去</button>
        </form>
        <a href="/status">一覧へ</a>
      </section>

      <%- include('layouts/footer') %>
        <script src="/js/vue.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="/js/detail.js"></script>
  </body>

</html>